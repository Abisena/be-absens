// prisma/schema.prisma
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  absensis  Absensi[]
}

model Absensi {
  id          Int      @id @default(autoincrement())
  userId      Int
  latitude    Float
  longitude   Float
  status      Status   @default(Hadir)
  waktu       DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
}

model OfficeLocation {
  id        Int      @id @default(autoincrement())
  name      String
  latitude  Float
  longitude Float
  radius    Float
}


enum Status {
  Hadir
  Sakit
  Izin 
  Tugas
  Tidak_ada_keterangan
}